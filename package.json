{
  "name": "mbstring",
  "version": "0.3.1",
  "description": "Librairie offrant des méthodes permettant de gérer des chaines e caractères (string)",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "doc": "typedoc --out docs src/index.ts",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolenge/mbstring.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "string",
    "char",
    "ucFirst",
    "first",
    "uppercase",
    "bolenge",
    "bString",
    "bstring"
  ],
  "author": "Don de Dieu Bolenge",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bolenge/mbstring/issues"
  },
  "homepage": "https://github.com/bolenge/mbstring#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/jest": "^29.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "eslint — fix"
    ],
    "**/*": "prettier — write — ignore-unknown"
  },
  "contributors": [
    {
      "name": "Peniel Dialu",
      "email": "dialundamapeniel@gmail.com",
      "url": "https://github.com/bilwifi"
    }
  ]
}
